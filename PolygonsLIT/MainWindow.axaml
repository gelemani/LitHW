<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:polygonsLit="clr-namespace:PolygonsLIT"
        mc:Ignorable="d"
        d:DesignWidth="800"
        d:DesignHeight="450"
        x:Class="PolygonsLIT.MainWindow"
        PointerPressed="InputElement_OnPointerPressed"
        PointerMoved="InputElement_OnPointerMoved"
        PointerReleased="InputElement_OnPointerReleased"
        Title="PolygonsLIT">
    <Grid>
        <polygonsLit:CustomControl Name="CustomControl"/>
        <StackPanel Margin="20">
            <ComboBox x:Name="ShapeComboBox" SelectedIndex="0" MaxDropDownHeight="100"
                      SelectionChanged="ShapeComboBox_SelectionChanged">
                <ComboBoxItem>Circle</ComboBoxItem>
                <ComboBoxItem>Square</ComboBoxItem>
                <ComboBoxItem>Triangle</ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </Grid>
</Window>   